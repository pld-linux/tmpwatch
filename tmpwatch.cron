#!/bin/sh
#########
# Some defaults:
OPTIONS="-fq"
if [ -f /etc/sysconfig/tmpwatch ]; then
	. /etc/sysconfig/tmpwatch
fi

########
for file in /etc/tmpwatch/*.conf; do
	grep ^/ ${file} | while read DIRECTORY TIME OPTS; do
		OPTS="${OPTIONS} ${OPTS}"
		/usr/sbin/tmpwatch ${OPTS} ${TIME} ${DIRECTORY}
	done
done

